                    </div>
                    <div class="absolute bottom-2 text-white/80 text-xs font-bold">CLICK ME</div>
                `;

                // èƒŒé¢ (éŠæˆ²å…§å®¹)
                const back = document.createElement('div');
                const bgColor = CATEGORY_COLORS[game.category];
                back.className = `absolute w-full h-full backface-hidden rotate-y-180 rounded-xl border-4 shadow-xl flex flex-col items-center justify-center p-2 text-center ${bgColor}`;
                back.innerHTML = `
                    <div class="mb-2 transform scale-125"><i data-lucide="${game.iconName}" class="w-8 h-8"></i></div>
                    <div class="text-xs font-bold uppercase tracking-wider opacity-80 mb-1">${CATEGORY_NAMES[game.category]}</div>
                    <h3 class="text-lg font-black leading-tight break-words">${game.title}</h3>
                    <p class="text-[10px] mt-2 opacity-90 line-clamp-2">${game.desc}</p>
                    <button class="mt-auto bg-white/20 hover:bg-white/40 text-white text-xs py-1 px-3 rounded-full transition-colors pointer-events-none">
                        é–‹å§‹å°æˆ°
                    </button>
                `;

                inner.appendChild(front);
                inner.appendChild(back);
                card.appendChild(inner);
                grid.appendChild(card);
            });
            
            // æ¯æ¬¡é‡æ–°æ¸²æŸ“å¾Œéƒ½éœ€è¦é‡æ–°åˆå§‹åŒ–åœ–ç¤º
            lucide.createIcons();
        }

        function handleCardClick(index) {
            if (playedIndices.includes(index)) return;

            if (!revealedIndices.includes(index)) {
                revealedIndices.push(index);
                renderBoard(); // é‡æ–°æ¸²æŸ“ä»¥è§¸ç™¼ç¿»è½‰å‹•ç•«
            } else {
                activeGameIndex = index;
                showBattleScreen(games[index]);
            }
        }

        // --- å°æˆ°ç•«é¢é‚è¼¯ ---
        function showBattleScreen(game) {
            document.getElementById('board-view').classList.add('hidden');
            const battleView = document.getElementById('battle-view');
            battleView.classList.remove('hidden');
            
            // è¨­å®šèƒŒæ™¯é¡è‰²
            const bgClass = CATEGORY_BG_CLASSES[game.category];
            // ç§»é™¤èˆŠçš„èƒŒæ™¯è‰²ï¼ŒåŠ å…¥æ–°çš„
            battleView.className = `fixed inset-0 z-50 flex flex-col transition-colors duration-500 overflow-hidden ${bgClass}`;

            document.getElementById('game-header-title').innerText = `${CATEGORY_NAMES[game.category]} :: ${game.title}`;
            document.getElementById('game-desc-footer').innerText = `Christmas Party Battle Mode â€¢ ${game.desc}`;

            // è¨­å®š Icon
            document.getElementById('battle-icon-container').innerHTML = `<i data-lucide="${game.iconName}" class="w-16 h-16 text-white"></i>`;
            
            // åˆå§‹åŒ–ç‹€æ…‹
            tabooReady = false;
            resetTimer();
            stopAudio();
            pickRandomQuestion();
            lucide.createIcons();
        }

        function backToBoard() {
            if (activeGameIndex !== null && !playedIndices.includes(activeGameIndex)) {
                playedIndices.push(activeGameIndex);
            }
            activeGameIndex = null;
            document.getElementById('battle-view').classList.add('hidden');
            document.getElementById('board-view').classList.remove('hidden');
            stopAudio();
            renderBoard();
        }

        function pickRandomQuestion() {
            stopAudio();
            const game = games[activeGameIndex];
            const pool = game.contentPool;
            currentQuestion = pool[Math.floor(Math.random() * pool.length)];
            
            isShowingAnswer = false;
            document.getElementById('answer-container').classList.add('hidden');
            document.getElementById('answer-btn-text').innerText = 'çœ‹ç­”æ¡ˆ';
            document.getElementById('refresh-icon').classList.remove('animate-spin');
            
            resetTimer();
            renderQuestionContent(game, currentQuestion);
        }

        function toggleAnswer() {
            isShowingAnswer = !isShowingAnswer;
            const container = document.getElementById('answer-container');
            const btnText = document.getElementById('answer-btn-text');
            
            if (isShowingAnswer) {
                container.classList.remove('hidden');
                btnText.innerText = 'éš±è—ç­”æ¡ˆ';
                
                // å¦‚æœæ˜¯é–ƒç¾é¡Œï¼Œçœ‹ç­”æ¡ˆæ™‚ä¹Ÿè¦é¡¯ç¤ºé¡Œç›®
                if (games[activeGameIndex].type === 'flash') {
                     document.getElementById('flash-hidden').classList.add('hidden');
                     document.getElementById('flash-content').classList.remove('hidden');
                }
                
                // å¦‚æœæ˜¯quiz-options, é¡¯ç¤ºé«˜äº®
                 if (games[activeGameIndex].type === 'quiz-options') {
                     renderQuestionContent(games[activeGameIndex], currentQuestion); // Re-render to apply classes
                 }

            } else {
                container.classList.add('hidden');
                btnText.innerText = 'çœ‹ç­”æ¡ˆ';
            }
        }

        function renderQuestionContent(game, q) {
            const container = document.getElementById('question-container');
            const answerContainer = document.getElementById('answer-container');
            container.innerHTML = '';
            answerContainer.innerHTML = '';

            // 1. Taboo (é ­é ‚ç¦å¿Œè©) ç‰¹æ®Šè™•ç†
            if (game.type === 'taboo' && !tabooReady) {
                container.innerHTML = `
                    <div class="flex flex-col items-center justify-center h-80 bg-red-900/80 backdrop-blur-md rounded-3xl border-4 border-red-500 p-8 text-center animate-pulse">
                        <i data-lucide="alert-triangle" class="w-24 h-24 text-yellow-400 mb-6"></i>
                        <h2 class="text-4xl md:text-5xl font-black text-white mb-4">è­¦å‘Š</h2>
                        <p class="text-2xl text-white/90 mb-8">è«‹åƒè³½è€…èƒŒå°è¢å¹•ï¼<br/>(é€™æ˜¯é™·å®³éŠæˆ²ï¼Œä¸èƒ½çœ‹ï¼)</p>
                        <button onclick="tabooReady=true; renderQuestionContent(games[activeGameIndex], currentQuestion)" class="bg-yellow-400 hover:bg-yellow-300 text-red-900 px-8 py-4 rounded-full font-bold text-xl shadow-lg transition-transform hover:scale-105">
                            å¥½äº†ï¼Œé¡¯ç¤ºé¡Œç›®ï¼
                        </button>
                    </div>
                `;
                lucide.createIcons();
                return;
            }

            // 2. Flash (é–ƒç¾é¡Œ) ç‰¹æ®Šè™•ç†
            if (game.type === 'flash') {
                container.innerHTML = `
                    <div id="flash-content" class="flex flex-col items-center justify-center h-64 bg-white/10 backdrop-blur-md rounded-3xl shadow-inner border border-white/20 p-6">
                        <h2 class="text-3xl md:text-5xl font-bold text-center text-white drop-shadow-lg leading-relaxed">${q.q}</h2>
                    </div>
                    <div id="flash-hidden" class="hidden flex flex-col items-center justify-center h-64 bg-black/40 backdrop-blur-md rounded-3xl border border-white/20 p-6 animate-pulse">
                        <i data-lucide="eye-off" class="w-16 h-16 text-white/50 mb-4"></i>
                        <h2 class="text-3xl font-bold text-white/80">é¡Œç›®å·²éš±è—</h2>
                        <p class="text-white/60 mt-2">è«‹å›ç­”å‰›æ‰çœ‹åˆ°çš„å…§å®¹ï¼</p>
                    </div>
                `;
                
                // 1.5ç§’å¾Œéš±è—
                if (!isShowingAnswer) {
                    setTimeout(() => {
                        const content = document.getElementById('flash-content');
                        const hidden = document.getElementById('flash-hidden');
                        if (content && hidden && !isShowingAnswer) {
                            content.classList.add('hidden');
                            hidden.classList.remove('hidden');
                        }
                    }, 1500);
                }
            } 
            // 3. åœ–ç‰‡é¡
            else if (['image', 'image-diff', 'image-find', 'image-find-organ', 'geo-guess'].includes(game.type)) {
                let imgType = 'default';
                if (game.type === 'geo-guess') imgType = 'street';
                if (game.type === 'image-diff') imgType = 'diff';
                if (game.id === 'adr_new_1') imgType = 'periodic'; // é€±æœŸè¡¨
                if (game.type === 'image-find-organ') imgType = 'anatomy';
                
                const imgUrl = getPlaceholderImage(q.imgText || q.q, imgType);
                const displayTitle = (game.type === 'geo-guess') ? (isShowingAnswer ? q.a : 'è«‹çœ‹åœ–çŒœæ¸¬') : q.q;

                let extraHtml = '';
                // Google åœ°çƒç´…é»
                if (game.type === 'geo-guess' && isShowingAnswer) {
                    extraHtml = `
                        <div class="absolute w-4 h-4 bg-red-600 rounded-full border-2 border-white shadow-xl animate-ping" style="left: ${q.x || 50}%; top: ${q.y || 50}%"></div>
                        <div class="absolute w-4 h-4 bg-red-600 rounded-full border-2 border-white shadow-xl" style="left: ${q.x || 50}%; top: ${q.y || 50}%"></div>
                    `;
                }
                
                // è¦†è“‹å±¤ Icon
                let overlayIcon = '';
                if(game.type === 'geo-guess' && !isShowingAnswer) overlayIcon = '<i data-lucide="map-pin" class="w-12 h-12 text-white/50"></i>';

                container.innerHTML = `
                    <div class="flex flex-col items-center justify-center bg-white/10 backdrop-blur-md rounded-3xl shadow-inner border border-white/20 p-6">
                        <div class="relative w-full ${imgType === 'diff' || imgType === 'periodic' ? 'max-w-3xl aspect-[2/1]' : 'max-w-md aspect-video'} bg-black/30 rounded-lg overflow-hidden mb-4 flex items-center justify-center group">
                            <img src="${imgUrl}" class="w-full h-full object-contain bg-black">
                            ${extraHtml}
                            <div class="absolute inset-0 flex items-center justify-center pointer-events-none">${overlayIcon}</div>
                        </div>
                        <h2 class="text-2xl md:text-4xl font-bold text-center text-white drop-shadow-lg leading-relaxed">${displayTitle}</h2>
                    </div>
                `;
            }
            // 4. çœŸå‡é¡Œ
            else if (game.type === 'true-false') {
                 container.innerHTML = `
                    <div class="flex flex-col items-center justify-center h-64 bg-white/10 backdrop-blur-md rounded-3xl shadow-inner border border-white/20 p-6">
                        <h2 class="text-3xl md:text-5xl font-bold text-center text-white drop-shadow-lg leading-relaxed mb-8">${q.q}</h2>
                        <div class="flex gap-12">
                            <div class="flex flex-col items-center text-green-400 opacity-50"><i data-lucide="check-circle" class="w-20 h-20"></i><span class="text-2xl font-bold">TRUE</span></div>
                            <div class="flex flex-col items-center text-red-400 opacity-50"><i data-lucide="x-circle" class="w-20 h-20"></i><span class="text-2xl font-bold">FALSE</span></div>
                        </div>
                    </div>
                `;
            }
            // 5. é¸æ“‡é¡Œ
            else if (game.type === 'quiz-options') {
                let optionsHtml = '';
                q.options.forEach(opt => {
                    // åˆ¤æ–·æ˜¯å¦é«˜äº®æ­£ç¢ºç­”æ¡ˆ
                    const isCorrect = isShowingAnswer && q.a.includes(opt.split('.')[0]);
                    const baseClass = "p-4 rounded-xl text-lg font-bold transition-all";
                    const activeClass = isCorrect ? "bg-green-500 text-white scale-105 shadow-lg border-2 border-white" : "bg-white/20 text-white hover:bg-white/30";
                    optionsHtml += `<div class="${baseClass} ${activeClass}">${opt}</div>`;
                });

                container.innerHTML = `
                    <div class="flex flex-col items-center justify-center bg-white/10 backdrop-blur-md rounded-3xl shadow-inner border border-white/20 p-6 w-full">
                        <h2 class="text-2xl md:text-4xl font-bold text-center text-white drop-shadow-lg mb-8">${q.q}</h2>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 w-full max-w-2xl">
                            ${optionsHtml}
                        </div>
                    </div>
                `;
            }
            // 6. éŸ³æ¨‚é¡Œ
            else if (game.type === 'music-visual' || game.type === 'audio-guess') {
                 container.innerHTML = `
                    <div class="flex flex-col items-center justify-center h-64 bg-white/10 backdrop-blur-md rounded-3xl shadow-inner border border-white/20 p-6">
                        <div id="audio-visualizer" class="flex gap-2 mb-8 h-24 items-end justify-center">
                            <!-- JS ç”Ÿæˆ bar -->
                        </div>
                        <button id="audio-btn" onclick="toggleAudio('${q.audio || SAMPLE_AUDIO_URL}')" class="rounded-full p-6 transition-all shadow-xl hover:scale-110 bg-white text-blue-600">
                            <i data-lucide="play" class="w-10 h-10 fill-current ml-1"></i>
                        </button>
                        <h2 class="mt-6 text-xl md:text-2xl font-bold text-center text-white/90">${q.q}</h2>
                    </div>
                `;
                // ç”Ÿæˆè¦–è¦ºæ¢
                const visualizer = container.querySelector('#audio-visualizer');
                for(let i=0; i<8; i++) {
                    const bar = document.createElement('div');
                    bar.className = 'w-4 bg-white/80 rounded-t-md transition-all duration-100 h-2';
                    bar.style.animationDelay = `${i * 0.05}s`;
                    bar.id = `audio-bar-${i}`;
                    visualizer.appendChild(bar);
                }
            }
            // 7. é è¨­æ–‡å­—é¡Œ / æ’åºé¡Œ
            else {
                 let content = `<h2 class="text-3xl md:text-5xl font-bold text-center text-white drop-shadow-lg leading-relaxed">${q.q}</h2>`;
                 
                 // æ’åºé¡Œåœ¨æœªé¡¯ç¤ºç­”æ¡ˆæ™‚é¡¯ç¤ºæç¤º
                 if (game.type === 'timeline' && !isShowingAnswer) {
                     content = `
                        <h2 class="text-xl md:text-3xl font-bold text-center text-white drop-shadow-lg mb-6 leading-relaxed">${q.q}</h2>
                        <div class="text-white/60 animate-pulse">è«‹æ¶ç­”ä¸¦æ’åº...</div>
                     `;
                 } else if (game.type === 'timeline' && isShowingAnswer) {
                     // æ’åºé¡Œé¡¯ç¤ºç­”æ¡ˆæ™‚çš„ç‰¹æ®Šæ ¼å¼åœ¨ answerContainer è™•ç†ï¼Œé€™è£¡åªé¡¯ç¤ºé¡Œç›®
                      content = `<h2 class="text-xl md:text-3xl font-bold text-center text-white drop-shadow-lg mb-6 leading-relaxed">${q.q}</h2>`;
                 }

                 container.innerHTML = `
                    <div class="flex flex-col items-center justify-center h-64 bg-white/10 backdrop-blur-md rounded-3xl shadow-inner border border-white/20 p-6">
                        ${content}
                    </div>
                `;
            }

            // æ¸²æŸ“ç­”æ¡ˆå€
            if (isShowingAnswer) {
                if (game.type === 'timeline') {
                    answerContainer.innerHTML = `
                         <div class="bg-yellow-400 text-yellow-900 p-4 rounded-xl text-center font-bold text-2xl shadow-xl border-4 border-yellow-200">
                             <div class="text-sm mb-1 opacity-75">æ­£ç¢ºé †åº</div>
                             ${q.a}
                         </div>
                    `;
                } else if (game.type !== 'quiz-options') { // é¸æ“‡é¡Œç­”æ¡ˆå·²ç¶“ç›´æ¥æ¨™åœ¨é¸é …ä¸Š
                     answerContainer.innerHTML = `
                        <div class="bg-yellow-400 text-yellow-900 p-4 rounded-xl text-center font-bold text-2xl shadow-xl border-4 border-yellow-200">
                            ç­”æ¡ˆï¼š${q.a}
                        </div>
                    `;
                }
            }

            lucide.createIcons();
        }

        // --- éŸ³æ•ˆæ§åˆ¶ ---
        function toggleAudio(src) {
            const audio = document.getElementById('game-audio');
            const btn = document.getElementById('audio-btn');
            
            if (isAudioPlaying) {
                audio.pause();
                isAudioPlaying = false;
                btn.classList.remove('bg-red-500', 'text-white');
                btn.classList.add('bg-white', 'text-blue-600');
                btn.innerHTML = '<i data-lucide="play" class="w-10 h-10 fill-current ml-1"></i>';
                // åœæ­¢å‹•ç•«
                for(let i=0; i<8; i++) {
                    const bar = document.getElementById(`audio-bar-${i}`);
                    if(bar) {
                        bar.classList.remove('animate-bounce');
                        bar.style.height = '10px';
                        bar.style.opacity = '0.3';
                    }
                }
            } else {
                audio.src = src;
                audio.play();
                isAudioPlaying = true;
                btn.classList.remove('bg-white', 'text-blue-600');
                btn.classList.add('bg-red-500', 'text-white');
                btn.innerHTML = '<i data-lucide="pause" class="w-10 h-10 fill-current"></i>';
                // é–‹å§‹å‹•ç•«
                for(let i=0; i<8; i++) {
                    const bar = document.getElementById(`audio-bar-${i}`);
                    if(bar) {
                        bar.classList.add('animate-bounce');
                        bar.style.height = '100%';
                        bar.style.opacity = '1';
                    }
                }
            }
            lucide.createIcons();
        }

        function stopAudio() {
            const audio = document.getElementById('game-audio');
            audio.pause();
            audio.currentTime = 0;
            isAudioPlaying = false;
        }

        // --- è¨ˆæ™‚å™¨ ---
        function formatTime(sec) {
            const m = Math.floor(sec / 60).toString().padStart(2, '0');
            const s = (sec % 60).toString().padStart(2, '0');
            return `${m}:${s}`;
        }

        function updateTimerDisplay() {
            document.getElementById('timer-display').innerText = formatTime(timerSeconds);
        }

        function toggleTimer() {
            const btn = document.getElementById('timer-btn');
            if (isTimerRunning) {
                clearInterval(timerInterval);
                isTimerRunning = false;
                btn.innerText = 'é–‹å§‹';
                btn.classList.remove('bg-red-500');
                btn.classList.add('bg-green-500');
            } else {
                timerInterval = setInterval(() => {
                    timerSeconds++;
                    updateTimerDisplay();
                }, 1000);
                isTimerRunning = true;
                btn.innerText = 'æš«åœ';
                btn.classList.remove('bg-green-500');
                btn.classList.add('bg-red-500');
            }
        }

        function resetTimer() {
            clearInterval(timerInterval);
            isTimerRunning = false;
            timerSeconds = 0;
            updateTimerDisplay();
            const btn = document.getElementById('timer-btn');
            btn.innerText = 'é–‹å§‹';
            btn.classList.remove('bg-red-500');
            btn.classList.add('bg-green-500');
        }

    </script>
</body>
</html>
